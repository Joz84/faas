              <%= f.input :link %>
              <%= f.input :address %>
              <%= f.input :city %>
              <%= f.input :country %>
              <%= f.input :target, collection: Activity.targets %>
              <%= f.button :submit %>
            <% end %>





          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  </div>

